  background-color: #474e5d;
  color: white;
}

.container {
  padding: 0 16px;
}

.container::after, .row::after {
  content: "";
  clear: both;
  display: table;
}

.title {
  color: rgb(214, 214, 214);
  text-decoration: underline;
}

.button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
}

.button:hover {
    background:  #c9200a;
}

@media screen and (max-width: 650px) {
  .column {
    width: 70%;
    height: 90%;
    display: block;
    margin-top: 90px;
  }
  .fotopf {
    max-width: 430px;
  }
  
